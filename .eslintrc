{
  "extends": ["airbnb", "prettier"],
  "plugins": ["prettier"],
  "root": true,
  "parser": "babel-eslint",
  "env": {
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": 2016,
    "sourceType": "module"
  },
  "rules": {
    "prettier/prettier": "error",
    "no-underscore-dangle": 0,
    "no-unused-vars": [
      2,
      {
        "args": "after-used",
        "argsIgnorePattern": "^_"
      }
    ],
    "linebreak-style": ["error", "unix"],
    "semi": ["error", "always"],
    "class-methods-use-this": 0,
    "no-console": 0,
    "no-alert": 0,
    "no-plusplus": "off",
    "func-names": 0,
    "lines-between-class-members": 0,
    "no-nested-ternary": 0,
    "no-param-reassign": 0,
    "object-shorthand": 0,
    "camelcase": 0,
    "no-restricted-globals": 0,
    "prefer-const": 0,
    "jest/no-commented-out-tests": 0,
    "consistent-return": 0,
    "import/prefer-default-export": 0
  }
}
